<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    tools:context=".view.ui.update_profile.PersonalInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/guarantorName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/edit_text_box"
            android:fontFamily="@font/roboto_light"
            android:hint="Guarantors’ name"
            android:imeOptions="actionNext"
            android:inputType="textPersonName"
            android:padding="@dimen/_8sdp" />

        <EditText
            android:id="@+id/guarantorPhone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/edit_text_box"
            android:fontFamily="@font/roboto_light"
            android:hint="Guarantors’ Phone Number"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:padding="@dimen/_8sdp" />

        <EditText
            android:id="@+id/guarantorEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/edit_text_box"
            android:fontFamily="@font/roboto_light"
            android:hint="Guarantors’ Email"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_8sdp" />


        <Spinner
            android:id="@+id/guarantorIdType"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/edit_text_box"
            android:fontFamily="@font/roboto_light"
            android:padding="@dimen/_8sdp"
            tools:ignore="SpeakableTextPresentCheck" />

        <LinearLayout
            android:id="@+id/uploadDocument"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/edit_text_box">

            <ImageView
                android:id="@+id/documentImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_file" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/edit_text_box"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center|start"
                android:padding="@dimen/_8sdp"
                android:text="Upload Guarantor Document" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_44sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Next"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="@dimen/_9sdp"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/white"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>